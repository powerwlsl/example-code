<h1>New Job Posting</h1>
<%= form_for(@job) do |f| %>
<%= f.hidden_field :company_id, :value => @cid %>
<ul>
	<!-- error handling -->
	<% @job.errors.full_messages.each do |error| %> 
	<li><%= error %></li>
	<% end %>
</ul>
<p>
	<%= f.label :title %><br />
	<%= f.text_field :title %>
</p>
<p>
	<%= f.label :description %><br />
	<%= f.text_area :description %>
</p>
<p>
	<%= f.label :qualification %><br />
	<%= f.text_area :qualification %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>