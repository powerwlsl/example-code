<h1>New Company</h1>
<%= form_for(@company) do |f| %> 
<ul>
	<!-- error handling -->
	<% @company.errors.full_messages.each do |error| %> 
	<li><%= error %></li>
	<% end %>
</ul>
<p>
	<%= f.label :name %><br />
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :description %><br />
	<%= f.text_area :description %>
</p>
<p>
	<%= f.label :link %><br />
	<%= f.text_field :link %>
</p>

<p>
	<%= f.submit %>
</p>
<% end %>